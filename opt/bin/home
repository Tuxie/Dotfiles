#!/bin/sh

LOCALPORTS="3128 6667 6789 8080 9091 9092"
#SERVER="server.tuxie.ath.cx"
SERVER="tuxie.se"

for P in $LOCALPORTS; do
  FORWARDS="$FORWARDS -L $P:localhost:$P"
done


exec ssh -X -c arcfour -K -t tuxie@$SERVER \
  $FORWARDS \
  -L 4443:192.168.0.1:80 \
  -L 1081:192.168.0.162:1080 \
  -L 8112:192.168.0.162:8112 \
  -L 9090:192.168.0.161:9090 \
  -D 1080 \
  screen -xRR "$@"
#  "ssh -c arcfour -K -t tuxie@desktop 'screen -xRR'"

