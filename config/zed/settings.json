// Zed settings
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "vim_mode": true,

  "icon_theme": "Puppet Icons",
  "theme": "Catppuccin Mocha (Blur)",
  "ui_font_size": 14.5,

  //"buffer_font_family": "CommitMono Nerd Font",
  "buffer_font_family": "BitstromWera Nerd Font",
  "buffer_font_size": 17,
  "buffer_line_height": { "custom": 1.2 },

  "terminal": {
    "line_height": { "custom": 1 },
    "font_size": 15,
    "font_weight": 300
  },

  "show_whitespaces": "all",

  "vim": { "use_system_clipboard": "on_yank" },

  "ansible": {
    "executionEnvironment": { "enabled": false }
  },

  "file_types": {
    "Ansible": [
      "**/defaults/**.yml",
      "**/defaults/**.yaml",
      "**/group_vars/**.yml",
      "**/group_vars/**.yaml",
      "**/host_vars/**.yml",
      "**/host_vars/**.yaml",
      "**/inventories/**.yaml",
      "**/playbooks/**.yml",
      "**/playbooks/**.yaml",
      "**/roles/**.yml",
      "**/roles/**.yaml",
      "**/pb-*.yaml"
    ],
    "ini": [
      "**/inventories/*production",
      "**/inventories/*staging",
      "**/inventories/*next"
    ],
    "Shell Script": ["**.sh.j2", "**.zsh.j2", "**.bash.j2", "tmux.conf*"],
    "TOML": ["postgresql.conf"],
    "Jinja2": ["pg_*.conf"]
  },

  // Don't clutter the text and scrollbar with info/hints
  "diagnostics_max_severity": "warning",
  "scrollbar": { "diagnostics": "error" },
  "tabs": {
    "git_status": false
  },

  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },

  "wrap_guides": [80]
}
